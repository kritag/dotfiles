[delta]
  features = delta-theme
  side-by-side = true

[core]
  pager = delta

[interactive]
  diffFilter = delta --color-only --features=interactive

[include]
  path = ~/.theme.gitconfig
  path = ~/.gitconfig.local
[credential]
	helper = libsecret
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
